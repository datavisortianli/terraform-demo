{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "environment": "dev",
    "role": "spark_worker"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-d2c924b2",
      "instance_type": "t2.small",
      "ssh_pty": true,
      "ssh_username": "centos",
      "ami_name": "{{user `role`}}.{{user `environment`}}_ansible",
      "tags": {
        "Name": "{{user `environment`}}-{{user `role`}}-ansible",
        "role": "{{user `ts_role`}}",
        "purpose": "pre-baked AMI for role {{user `role`}}",
        "environment": "{{user `environment`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/setup_ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/spark.yml",
      "playbook_dir": "../ansible/",
      "extra_arguments": [ "--extra-vars \"Role={{user `role`}}\"" ]
    }
  ]
}
