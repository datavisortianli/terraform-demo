{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "environment": "testing",
    "role": "spark_base"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-a58d0dc5",
      "instance_type": "t2.small",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `role`}}.{{user `environment`}}_ansible",
      "tags": {
        "Name": "{{user `environment`}}-{{user `role`}}-ansible",
        "role": "{{user `ts_role`}}",
        "purpose": "pre-baked AMI for role {{user `role`}}",
        "environment": "{{user `environment`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "files/installers/ubuntu-install.sh"
    },
    {
      "type": "shell",
      "script": "files/installers/spark-install.sh"
    }
  ]
}
